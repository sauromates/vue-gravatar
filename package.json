{
  "name": "@sauromates/vue-gravatar",
  "version": "1.0.0-beta",
  "description": "Reusable, customizable and fully typed Gravatar component for Vue3 projects.",
  "license": "MIT",
  "author": "Vsevolod Girenko <vs.girenko@mail.ru>",
  "repository": {
    "type": "git",
    "url": "https://github.com/sauromates/vue-gravatar.git"
  },
  "bugs": "https://github.com/sauromates/vue-gravatar/issues",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/vue-gravatar.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/vue-gravatar.umd.cjs"
      }
    }
  },
  "main": "./dist/vue-gravatar.umd.cjs",
  "module": "./dist/vue-gravatar.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vue-tsc && vite build",
    "dev": "vite",
    "format": "prettier --write src/ tests/",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "test": "vitest",
    "test:interactive": "vitest --ui"
  },
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "vue": "^3.3.12"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.6.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.0.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "happy-dom": "^12.10.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^1.0.4",
    "vue": "^3.3.12",
    "vue-tsc": "^1.8.25"
  },
  "keywords": [
    "avatar",
    "gravatar",
    "image",
    "ui",
    "vue3"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
