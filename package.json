{
  "name": "@sauromates/vue-gravatar",
  "description": "Package provides a reusable, customizable and fully typed Gravatar component for Vue3/Tailwind projects.",
  "keywords": [
    "vue3",
    "ui",
    "tailwind",
    "image",
    "avatar",
    "gravatar"
  ],
  "license": "ISC",
  "private": false,
  "author": {
    "name": "Vsevolod Girenko",
    "email": "vs.girenko@mail.ru"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sauromates/vue-gravatar.git"
  },
  "bugs": "https://github.com/sauromates/vue-gravatar/issues",
  "version": "1.0.0-alpha",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/vue-gravatar.umd.cjs",
  "module": "./dist/vue-gravatar.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue-gravatar.js",
      "require": "./dist/vue-gravatar.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "tsc": "vue-tsc",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "peerDependencies": {
    "vue": "^3.3.12"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.6.1",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.6.4",
    "vue": "^3.3.12",
    "vue-tsc": "^1.8.25"
  }
}
